extends ../../layouts/default_f

block head
  title Login

block feet
  script(src='/views/login/index.min.js?#{cacheBreaker}')

block body
  .row
    .small-12.columns
      p
      div#login

  script(type='text/template', id='tmpl-login')
    .row
      .small-12.columns
        form
          fieldset
            legend Sign In
            .row
              .small-12.columns
                .alerts
                  |<% _.each(errors, function(err) { %>
                  .alert-box.alert(data-alert='')
                    <%- err %>
                    a.close(href='#', onclick="$(document).foundation('reflow')") &times;
                  |<% }); %>
                .form-group(class!='<%- errfor.username ? "has-error" : "" %>')
                  label Username or Email:<% if(errfor.username) { %>
                  span.help-block.label.alert <%- errfor.username %><% } %>
                  input.form-control(type='text', name='username', value!='<%= username %>')
                .form-group(class!='<%- errfor.password ? "has-error" : "" %>')
                  label Password:<% if(errfor.password) { %>
                  span.help-block.label.alert <%- errfor.password %><% } %>
                  input.form-control(type='password', name='password', value!='<%= password %>')
                .form-actions
                  button.btn-login.expand(type='button') Sign In
                  a.button.secondary.expand(href='/login/forgot/') Forgot your password?
